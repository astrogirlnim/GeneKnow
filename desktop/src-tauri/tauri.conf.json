{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GenePredict",
  "version": "0.1.0",
  "identifier": "org.gene.predict.desktop",
  "build": {
    "frontendDist": "../ui/dist",
    "beforeDevCommand": "pnpm --dir ../ui run dev",
    "beforeBuildCommand": "pnpm --dir ../ui run build"
  },
  "app": {
    "windows": [
      {
        "title": "GenePredict - Genomic Risk Assessment",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
