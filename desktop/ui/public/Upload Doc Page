    <script>
        // File upload functionality
        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('fileInput');
        const progressOverlay = document.getElementById('progressOverlay');
        const successState = document.getElementById('successState');
        const samplesSection = document.getElementById('samplesSection');

        // Drag and drop events
        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            handleFiles(e.dataTransfer.files);
        });

        uploadZone.addEventListener('click', (e) => {
            if (e.target !== fileInput) {
                fileInput.click();
            }
        });

        fileInput.addEventListener('change', (e) => {
            handleFiles(e.target.files);
        });

        function handleFiles(files) {
            if (files.length > 0) {
                const file = files[0];
                const validTypes = ['.fastq', '.bam', '.vcf', '.fq', '.gz'];
                const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
                
                if (validTypes.some(type => file.name.toLowerCase().endsWith(type.substring(1)))) {
                    startUpload(file);
                } else {
                    alert('Please select a valid genomic file format (FASTQ, BAM, VCF, or compressed files).');
                }
            }
        }

        function startUpload(file) {
            // Show progress overlay
            progressOverlay.classList.add('active');
            
            // Simulate file processing
            setTimeout(() => {
                progressOverlay.classList.remove('active');
                samplesSection.style.display = 'none';
                successState.classList.add('active');
                
                // Store file info for later use
                sessionStorage.setItem('uploadedFile', JSON.stringify({
                    name: file.name,
                    size: file.size,
                    type: file.type,
                    uploadTime: new Date().toISOString()
                }));
            }, 2500);
        }

        function loadSampleData(profileType) {
            // Show progress overlay
            progressOverlay.classList.add('active');
            document.querySelector('.progress-text').textContent = 'Loading clinical sample data...';
            
            // Simulate loading sample data
            setTimeout(() => {
                progressOverlay.classList.remove('active');
                samplesSection.style.display = 'none';
                successState.classList.add('active');
                
                // Store sample data info
                const sampleProfiles = {
                    'high-risk': {
                        name: 'BRCA_Positive_Clinical.bam',
                        riskScore: 8.2,
                        description: 'High-risk breast cancer profile'
                    },
                    'moderate-risk': {
                        name: 'Moderate_Risk_Clinical.vcf',
                        riskScore: 4.7,
                        description: 'Moderate-risk genetic profile'
                    },
                    'low-risk': {
                        name: 'Low_Risk_Control.fastq',
                        riskScore: 2.1,
                        description: 'Low-risk control sample'
                    }
                };
                
                sessionStorage.setItem('sampleData', JSON.stringify({
                    profile: profileType,
                    ...sampleProfiles[profileType],
                    loadTime: new Date().toISOString()
                }));
                
                // Update success message for sample data
                document.querySelector('.success-title').textContent = 'Sample Data Loaded';
                document.querySelector('.success-subtitle').textContent = `${sampleProfiles[profileType].description} ready for clinical analysis`;
            }, 1800);
        }

        function proceedToAnalysis() {
            // Get data from session storage
            const uploadedFile = sessionStorage.getItem('uploadedFile');
            const sampleData = sessionStorage.getItem('sampleData');
            
            // Show processing state
            const button = document.querySelector('.continue-button');
            button.textContent = 'Initializing Analysis...';
            button.style.opacity = '0.7';
            
            // Simulate processing time then show results
            setTimeout(() => {
                let message = "üî¨ CLINICAL ANALYSIS COMPLETE\n\n";
                
                if (uploadedFile) {
                    const fileInfo = JSON.parse(uploadedFile);
                    message += `üìÑ File: ${fileInfo.name}\n`;
                    message += `üíæ Size: ${(fileInfo.size / (1024 * 1024)).toFixed(1)} MB\n\n`;
                } else if (sampleData) {
                    const sample = JSON.parse(sampleData);
                    message += `üìÑ Sample: ${sample.name}\n`;
                    message += `üè• Profile: ${sample.description}\n\n`;
                }
                
                message += "‚úÖ HIPAA-compliant processing complete\n";
                message += "üß¨ Genomic variants identified and classified\n";
                message += "üìä Clinical risk assessment generated\n";
                message += "‚öïÔ∏è Evidence-based recommendations ready\n\n";
                message += "Your comprehensive clinical dashboard is ready for review.";
                
                alert(message);
                
                // Reset button
                button.textContent = 'Begin Clinical Analysis';
                button.style.opacity = '1';
                
                // In production, this would navigate to the dashboard
                // window.location.href = 'clinical-dashboard.html';
                
            }, 1200);
        }

        // Prevent default drag behaviors
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            document.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
    </script>
</body>
</html>
