# GenePredict Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================

# Application name and version
APP_NAME="GeneKnow"
APP_VERSION="0.1.0"

# Debug mode (development only)
DEBUG=false

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=500

# =============================================================================
# Data Storage Paths
# =============================================================================

# Base directory for all data (absolute path recommended)
DATA_BASE_PATH="/Users/youruser/GenePredict/data"

# Reference data directories
REFERENCE_DATA_PATH="${DATA_BASE_PATH}/reference"
GENOMES_1000_PATH="${REFERENCE_DATA_PATH}/1000genomes"
CLINVAR_PATH="${REFERENCE_DATA_PATH}/clinvar"
HGMD_PATH="${REFERENCE_DATA_PATH}/hgmd"

# Temporary processing directory
TEMP_DATA_PATH="${DATA_BASE_PATH}/temp"

# User data directory
USER_DATA_PATH="${DATA_BASE_PATH}/user"

# Model cache directory
MODEL_CACHE_PATH="${DATA_BASE_PATH}/models"

# =============================================================================
# Machine Learning Configuration
# =============================================================================

# HuggingFace cache directory
HUGGINGFACE_CACHE_DIR="${MODEL_CACHE_PATH}/huggingface"

# TensorFlow model directory
TENSORFLOW_MODEL_DIR="${MODEL_CACHE_PATH}/tensorflow"

# Enable differential privacy
ENABLE_PRIVACY=true

# Privacy budget (higher = more privacy, lower accuracy)
PRIVACY_BUDGET=1.0

# GPU acceleration (if available)
ENABLE_GPU=false

# =============================================================================
# Security Settings
# =============================================================================

# Enable encryption for temporary files
ENABLE_ENCRYPTION=true

# Encryption key (generate a secure random key)
ENCRYPTION_KEY=""

# File retention policy (days)
TEMP_FILE_RETENTION_DAYS=7

# Enable secure deletion
ENABLE_SECURE_DELETION=true

# =============================================================================
# Processing Settings
# =============================================================================

# Maximum number of parallel processes
MAX_PARALLEL_PROCESSES=4

# Processing timeout (seconds)
PROCESSING_TIMEOUT=3600

# Enable detailed logging
ENABLE_DETAILED_LOGGING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Networking (Local-only settings)
# =============================================================================

# Local server settings (for development)
LOCAL_SERVER_HOST="127.0.0.1"
LOCAL_SERVER_PORT=3000

# Disable external connections
ALLOW_EXTERNAL_CONNECTIONS=false

# =============================================================================
# Plugin Configuration
# =============================================================================

# Enable plugin system
ENABLE_PLUGINS=true

# Plugin directory
PLUGIN_DIR="${DATA_BASE_PATH}/plugins"

# =============================================================================
# Compliance Settings
# =============================================================================

# Enable GDPR compliance mode
ENABLE_GDPR_MODE=true

# Enable HIPAA compliance mode
ENABLE_HIPAA_MODE=true

# Data retention policy (days)
DATA_RETENTION_DAYS=30

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Development Settings (Development only)
# =============================================================================

# Enable development mode
DEVELOPMENT_MODE=true

# Enable performance profiling
ENABLE_PROFILING=false

# Mock data for testing
USE_MOCK_DATA=false 