{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GenePredict",
  "version": "0.1.0",
  "identifier": "com.genepredict.app",
  "build": {
    "beforeDevCommand": "cd ../../frontend && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd ../../frontend && npm run build",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "GenePredict - AI for Genomic Risk Assessment",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "theme": null
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
